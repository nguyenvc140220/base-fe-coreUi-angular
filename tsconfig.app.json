{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "paths": {
      "@angular/*": [
        "../node_modules/@angular/*",
      ],
      "@shared/*": ["./shared/*"],
      "@env/*": ["./environments/*"]
    }
  },
  "angularCompilerOptions": {
    "enableIvy": true,
    "importHelpers": true
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "**/*.d.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
